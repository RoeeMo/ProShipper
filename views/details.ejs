<%- include('./partials/base.ejs') %>
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="d-flex align-items-center">
                <h1 class="mr-3"><%= item.name %></h1>
                <form action="/del-item" method="post">
                    <input type="hidden" name="id" value="<%= item.id %>">
                    <button class="btn btn-danger btn-secondary btn-sm" type="submit">Delete Item</button>
                </form>
            </div>
          <img src="<%= item.image_url %>" alt="Item Image" class="rounded-circle" width="250" height="250">
          <p class="lead"><b><%= item.price + ' ' + item.currency %></b></p>
          <p class="lead"><%= item.description %></p>
        </div>
        <div class="col-md-6">
            <h2>Chat</h2>
            <div id="chat-messages"></div>
            <form id="chat-form">
                <div class="form-group">
                    <label for="message">Message:</label>
                    <textarea class="form-control" id="message" rows="4"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Send</button>
            </form>
        </div>
    </div>
</div>
</body>
</html>
